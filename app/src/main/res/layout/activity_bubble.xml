<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.example.donald.doublingballs.BubblesView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/moveLeft"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dip"
        android:layout_marginStart="50dip"
        android:background="@drawable/leftbutton" />

    <ImageButton
        android:id="@+id/moveRight"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/moveLeft"
        android:layout_marginStart="200dip"
        android:background="@drawable/rightbutton" />

    <ImageButton
        android:id="@+id/shoot"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/moveLeft"
        android:layout_marginEnd="50dp"
        android:background="@drawable/weapon" />
</RelativeLayout>
