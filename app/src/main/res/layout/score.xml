<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scoreactivity">

    <TextView
        android:id="@+id/currentscoreLabel"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/highscoreLabel1"
        android:layout_marginBottom="105dip"
        android:layout_marginEnd="140dip"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/backicon"
        android:onClick="onButtonClickBack" />

    <ImageButton
        android:id="@+id/share"
        android:layout_width="64dp"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shareicon" />

    <TextView
        android:id="@+id/highscoreLabel1"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="140dip"
        android:layout_marginTop="97dip"
        android:text="4000"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

</RelativeLayout>
