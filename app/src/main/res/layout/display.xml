<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menuactivity">

    <ImageButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="46dip"
        android:background="@drawable/playicon"
        android:onClick="onButtonClickPlay" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="120dip"
        android:layout_height="133dip"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="54dip"
        android:background="@drawable/scoreicon" />

    <ImageButton
        android:id="@+id/shop"
        android:layout_width="125dip"
        android:layout_height="130dip"
        android:layout_centerInParent="true"
        android:background="@drawable/shopicon"
        android:onClick="onButtonClickShop" />
</RelativeLayout>
